<div class="contents row">
    <div class="title_box">
      <p class="title_p">タイトル: <%= @tweet.text %></p>
      <div class="master_name">
        <span class="name">
          <a href="/users/<%= @tweet.user.id %>">
            <span>投稿者: </span><%= @tweet.user.nickname %>
          </a>  
        </span>
      </div>
    </div>


  <div class="show_container">
    <div class="content_post_show" style="background-image: url(<%= @tweet.picture %>);">
      <%# <%= image_tag(@tweet.picture.url ) %> 
    </div>
    <div class="container">
      <div class="comments">
        <h4>コメント</h4>
          <div class="comments_box">
            <% if @comments %>
              <% @comments.each do |comment| %>
                <p>
                  <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
                  <%= comment.text %>
                </p>
              <% end %>
              
          </div>    
    </div>    
        <% if current_user %>
          <%= form_with(model: [@tweet, @comment], local: true, id: "new_comment") do |form| %> 
            <%= form.text_area :text, placeholder: "コメントする" , rows: "2", class: "textbox" %>
            <%= form.submit "SEND", class: "form__submit" %>
          <% end %>
          <% else %>
            <strong><p>※ コメントの投稿にはログインが必要です ※</p></strong>
          <% end %>
        <% end %>  
    </div>
  </div>  
</div>